{
  "pluginAlias": "NaimUnitiqute2",
  "pluginType": "accessory",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "Naim UnitiQute 2"
      },
      "ipAddress": {
        "title": "Device IP Address",
        "type": "string",
        "required": true,
        "placeholder": "192.168.1.XXX"
      },
      "port": {
        "title": "UPnP Port",
        "type": "number",
        "default": 8080
      },
      "pollMs": {
        "title": "Polling Interval (ms)",
        "type": "integer",
        "default": 5000,
        "description": "How often to poll the device for play state, volume and mute. Set 0 to disable."
      }
    },
    "required": ["ipAddress"]
  },
  "layout": [
    {
      "type": "fieldset",
      "title": "Device",
      "items": [
        "name",
        "ipAddress",
        "port",
        "pollMs"
      ]
    }
  ]
}
